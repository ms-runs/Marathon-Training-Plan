from datetime import datetime

def add_recalibration_events(cal):

    recal_dates = [
        date(2026,2,24),
        date(2026,3,31),
        date(2026,4,21),
        date(2026,7,28),
        date(2026,8,25),
        date(2026,9,29),
        date(2026,10,27),
        date(2026,11,24),
        date(2026,12,22)
    ]

    for d in recal_dates:
        e = Event()
        e.name = "Monthly Pace Recalibration"
        e.begin = d
        e.make_all_day()
        e.description = (
            "30-Min Threshold Time Trial\n\n"
            "• 10–15 min warm-up\n"
            "• 30 min hard effort\n"
            "• Record avg pace final 20 min\n\n"
            "Update training paces:\n"
            "Effort 3 = test pace\n"
            "Effort 2 = +15–20 sec/km\n"
            "Effort 1 = +35–45 sec/km"
        )
        cal.events.add(e)

# After generating weekly events, call:
add_recalibration_events(cal)
